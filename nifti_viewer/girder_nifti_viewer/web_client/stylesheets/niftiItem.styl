.g-nifti-viewer
  margin-top: 20px
  padding: 15px
  border: 1px solid #ddd
  border-radius: 4px
  background-color: #f9f9f9

  .g-nifti-viewer-header
    display: flex
    justify-content: space-between
    align-items: center
    margin-bottom: 15px
    padding-bottom: 10px
    border-bottom: 2px solid #0066cc

    h4
      margin: 0
      color: #333
      font-size: 18px

      i
        margin-right: 8px
        color: #0066cc

  .g-nifti-error-message
    color: #d9534f
    padding: 10px
    background-color: #f2dede
    border: 1px solid #ebccd1
    border-radius: 4px
    margin-bottom: 15px

  .g-nifti-controls
    display: flex
    flex-direction: column
    gap: 10px
    margin-bottom: 15px
    padding: 15px
    background-color: #fff
    border: 1px solid #ddd
    border-radius: 4px

    .g-nifti-controls-row
      display: flex
      flex-wrap: wrap
      gap: 10px
      align-items: center

    .g-nifti-orientation-btns
      display: flex
      gap: 5px

      .g-nifti-orientation-btn
        padding: 6px 12px
        border: 1px solid #ccc
        background-color: #fff
        cursor: pointer
        border-radius: 3px
        transition: all 0.2s
        font-size: 13px

        &:hover
          background-color: #f0f0f0

        &.active
          background-color: #0066cc
          color: #fff
          border-color: #0066cc

    .g-nifti-slice-control
      display: flex
      align-items: center
      gap: 10px
      flex: 1
      min-width: 300px

      .g-nifti-slice-slider
        flex: 1
        min-width: 150px

      .g-nifti-slice-label
        min-width: 100px
        font-weight: bold
        color: #555
        font-size: 13px

    .g-nifti-window-control
      display: flex
      align-items: center
      gap: 10px
      flex: 1
      min-width: 300px

      label
        font-weight: bold
        color: #555
        font-size: 13px
        min-width: 50px

      input[type="range"]
        flex: 1
        min-width: 120px

      .g-nifti-window-value
        min-width: 80px
        font-size: 12px
        color: #777

    .g-nifti-reset-view
      padding: 6px 12px
      background-color: #5cb85c
      color: #fff
      border: none
      border-radius: 3px
      cursor: pointer
      font-size: 13px

      &:hover
        background-color: #4cae4c

    .g-nifti-auto-window
      padding: 6px 12px
      background-color: #f0ad4e
      color: #fff
      border: none
      border-radius: 3px
      cursor: pointer
      font-size: 13px

      &:hover
        background-color: #ec971f

  .g-nifti-viewer-container
    width: 100%
    height: 600px
    background-color: #000
    border: 2px solid #333
    border-radius: 4px
    position: relative
    margin-bottom: 15px
    display: flex
    align-items: center
    justify-content: center
    overflow: hidden

    .g-nifti-canvas
      max-width: 90%
      max-height: 90%
      image-rendering: pixelated
      image-rendering: crisp-edges
      cursor: crosshair
      box-shadow: 0 0 20px rgba(255, 255, 255, 0.1)

    .g-nifti-loading
      color: #fff
      font-size: 16px
      padding: 20px
      text-align: center

    .g-nifti-placeholder
      color: #fff
      padding: 20px
      text-align: center

      p
        margin: 0
        font-size: 16px

  .g-nifti-metadata-container
    margin-top: 15px
