// NIfTI metadata panel styles (simile a DICOM tags)

.g-nifti-tags
  word-wrap break-word
  font-size 90%

.g-nifti-metadata-table
  width 100%
  margin-bottom 0

  tbody tr
    &:hover
      background-color #f5f5f5

  td
    padding 4px 8px
    vertical-align top
    border-bottom 1px solid #eee

  .g-nifti-tag-name
    font-weight 600
    color #555
    width 40%
    white-space nowrap

  .g-nifti-tag-value
    color #333
    word-break break-word
